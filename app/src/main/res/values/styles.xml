<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/icons</item>
        <item name="colorControlHighlight">@color/divider</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/divider</item>
    </style>

</resources>
