<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/icons</item>
        <item name="colorControlHighlight">@color/divider</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/divider</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="cardViewStyle" parent="AppTheme">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">16dp</item>
        <item name="contentPaddingTop">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textViewStyle1">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
